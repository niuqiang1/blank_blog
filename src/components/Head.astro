---
import { profile } from '@data/profile'

const siteInfo = {
	siteName: '憨夯仔的网站',
	siteDesc: 'This is a simple blog'
}

export interface Props {
	title: string
	desc: string
}

let { title, desc } = Astro.props

if (!title) {
	title = siteInfo.siteName
}
if (!desc) {
	desc = siteInfo.siteDesc
}
---

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	{title && <title>{`${title}-${profile.name}的小站`}</title>}
	{desc && <meta name="description" content={desc} />}
	<script
		is:inline
		async
		src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-6856567576656256"
		crossorigin="anonymous"
	></script>
	<script
		async
		is:inline
		src="https://www.googletagmanager.com/gtag/js?id=G-KHGH1PPXPW"
	></script>
	<script is:inline>
		window.dataLayer = window.dataLayer || []
		function gtag() {
			dataLayer.push(arguments)
		}
		gtag('js', new Date())
		gtag('config', 'G-KHGH1PPXPW')
	</script>
	<slot />
</head>
