---
import Blog from '../../../layouts/Blog.astro'
import Card from '../../../components/Card.astro'
import Pagination from '@components/Pagination'
import Head from '@components/Head'
import Tag from '@images/tag.svg'
import { getCategorys, publish, type Post } from '@data/post'
import { Page } from 'astro'

export interface Props {
	page: Page<Post>
}

export async function getStaticPaths({ paginate }) {
	const markdwonFiles = await Astro.glob('../../../content/**/*.md')
	const allTags = getCategorys(markdwonFiles)
	const allPosts = publish(markdwonFiles)
	return allTags.map(tag => {
		const filters = allPosts.filter(post => post?.tag?.includes(tag))
		return paginate(filters, { params: { tag }, pageSize: 3 })
	})
}

const { page } = Astro.props
const { tag } = Astro.params
const pageStyle: any = {
	position: 'absolute',
	bottom: '30px',
	left: '0px',
	width: '100%'
}
---

<Head title={tag} desc={tag} />

<Blog deg="-25">
	<div class="blog">
		<p><img src={Tag} alt="" />{tag.toUpperCase()}</p>
		<!-- <img class="bg-img" src={rect} width="100" alt="" /> -->
		<p class="bg-text bottom">{tag.toUpperCase()}</p>
		<ul role="list" class="link-card-grid">
			{
				page.data.map(p => (
					<Card
						href={`/post/${p.slug}`}
						title={p.title}
						body={p.desc}
						img={p.cover as unknown as string}
					/>
				))
			}
		</ul>
		<Pagination page={page} style={pageStyle} />
	</div>
</Blog>

<style lang="less">
	@import '../../../style/var.less';
	.bg-text {
		position: absolute;
		color: @c-sub;
		opacity: 0.1;
	}
	.blog {
		height: 100%;
		padding: 0px @gap-xl;
		position: relative;
		p {
			font-size: 40px;
			padding-bottom: @gap-md;
			display: flex;
			align-items: center;
			justify-content: center;
			color: @c-desc;
			img {
				width: 30px;
			}
		}
		.bg-text.bottom {
			font-size: 100px;
			font-weight: 800;
			bottom: 50px;
			right: 20px;
		}
	}

	.link-card-grid {
		width: 100%;
		display: grid;
		grid-template-columns: repeat(3, minmax(24ch, 1fr));
		grid-auto-rows: 380px;
		gap: @gap-md;
		padding: 0;
		position: relative;
		z-index: 10;
	}
</style>
